<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bocaito.MenuPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">
        <!-- Barra superior -->
        <Grid Grid.Row="0" Padding="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label 
                x:Name="lblDireccion"
                Grid.Row="0"
                Grid.Column="0"
                Text="Placeholder"
                FontFamily="SFProSemibold"
                FontSize="14"
                HorizontalOptions="Center"
                Margin="10,0,20,0"/>

            <ImageButton
                Grid.Row="0"
                Grid.Column="1"
                x:Name="btnFlecha"
                Source="flecha_abajo.svg"
                WidthRequest="20"
                HeightRequest="20"
                Margin="0,5,0,0"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                Clicked="OnFlechaAbajoClicked"/>
            
            <ImageButton
                Grid.Row="0"
                Grid.Column="2"
                x:Name="btnNotificaciones"
                Source="notificaciones.svg"
                WidthRequest="20"
                HeightRequest="20"
                Margin="0,0,50,0"
                HorizontalOptions="End"
                VerticalOptions="End"
                Clicked="OnNotificationsClicked"/>

            <ImageButton
                Grid.Row="0"
                Grid.Column="2"
                x:Name="btnCarrito"
                Source="carrito.svg"
                WidthRequest="20"
                HeightRequest="20"
                Margin="0,0,10,0"
                HorizontalOptions="End"
                VerticalOptions="End"
                Clicked="OnCarritoClicked"/>

            <BoxView 
                Grid.Row="1"
                Grid.ColumnSpan="3"
                HeightRequest="1"
                BackgroundColor="{StaticResource Black}"
                Margin="0,10,0,10"
                VerticalOptions="End"/>
        </Grid>

   <!-- Lista de Categorías y Productos -->
        <CollectionView 
            Grid.Row="1"
            ItemsSource="{Binding CategoriasConProductos}"
            SelectionMode="None">
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Spacing="10">
                        <!-- Nombre de la Categoría -->
                        <Label 
                            Text="{Binding CategoriaNombre}"
                            FontFamily="SFProSemibold"
                            FontSize="20"
                            Margin="15,10,0,0"/>

                        <!-- Productos de la Categoría -->
                        <CollectionView 
                            ItemsSource="{Binding Productos}"
                            SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout 
                                    Orientation="Vertical" 
                                    ItemSpacing="10"/>
                            </CollectionView.ItemsLayout>
                            
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid 
                                        Padding="15"
                                        ColumnDefinitions="*,Auto"
                                        BackgroundColor="White">
                                        
                                        <!-- Detalles del Producto (Izquierda) -->
                                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                                            <Label 
                                                Text="{Binding Nombre}"
                                                FontAttributes="Bold"
                                                FontSize="18"/>
                                            
                                            <Label 
                                                Text="{Binding Descripcion}"
                                                FontSize="14"
                                                TextColor="Gray"/>
                                            
                                            <Label 
                                                Text="{Binding Precio, StringFormat='${0:N2}'}"
                                                FontAttributes="Bold"
                                                TextColor="Green"
                                                FontSize="16"/>
                                        </VerticalStackLayout>

                                        <!-- Imagen del Producto (Derecha) -->
                                        <Image 
                                            Grid.Column="1"
                                            Source="{Binding Foto.Enlace}"
                                            WidthRequest="100"
                                            HeightRequest="100"
                                            Aspect="AspectFit"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <!-- Vista cuando no hay productos -->
            <CollectionView.EmptyView>
                <Label 
                    Text=""
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                </CollectionView.EmptyView>
            </CollectionView>

        <!-- Indicador de carga -->
        <ActivityIndicator 
            x:Name="loadingIndicator"
            Grid.Row="1"
            IsVisible="False"
            IsRunning="False"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Color="{StaticResource Primary}"/>
    </Grid>
</ContentPage>